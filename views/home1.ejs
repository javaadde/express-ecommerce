<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RoyalPurple | Premium E-commerce</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: #0f0c1d;
            color: #fff;
            min-height: 100vh;
        }
        
        /* Header Styles */
        header {
            background: rgba(19, 15, 38, 0.95);
            backdrop-filter: blur(10px);
            padding: 15px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.4);
            border-bottom: 1px solid rgba(101, 45, 147, 0.3);
        }
        
        .logo {
            display: flex;
            align-items: center;
        }
        
        .logo-icon {
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            box-shadow: 0 0 15px rgba(106, 17, 203, 0.5);
        }
        
        .logo-text {
            font-weight: 800;
            font-size: 24px;
            background: linear-gradient(to right, #9d50bb, #6e48aa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        nav ul {
            display: flex;
            list-style: none;
            gap: 30px;
        }
        
        nav a {
            color: #d8bfd8;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            transition: color 0.3s;
            position: relative;
        }
        
        nav a:hover {
            color: #9d50bb;
        }
        
        nav a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -5px;
            left: 0;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            transition: width 0.3s;
        }
        
        nav a:hover::after {
            width: 100%;
        }
        
        .header-icons {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        
        .icon-btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(35, 25, 66, 0.7);
            border: 2px solid #4b0082;
            color: #d8bfd8;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
        }
        
        .icon-btn:hover {
            border-color: #9d50bb;
            color: #9d50bb;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.4);
        }
        
        .cart-count {
            position: absolute;
            top: -5px;
            right: -5px;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: white;
            font-size: 12px;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
        
        /* Hero Section */
        .hero {
            height: 600px;
            background: linear-gradient(rgba(15, 12, 29, 0.7), rgba(15, 12, 29, 0.7)), url('https://images.unsplash.com/photo-1607082350899-7e105aa886ae?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80') no-repeat center center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 0 20px;
        }
        
        .hero-content {
            max-width: 800px;
        }
        
        .hero h1 {
            font-size: 48px;
            margin-bottom: 20px;
            background: linear-gradient(to right, #9d50bb, #6e48aa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .hero p {
            font-size: 20px;
            color: #b19cd9;
            margin-bottom: 30px;
        }
        
        .btn {
            padding: 15px 40px;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-block;
            text-decoration: none;
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.4);
        }
        
        .btn:hover {
            background: linear-gradient(to right, #2575fc, #6a11cb);
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(106, 17, 203, 0.6);
        }
        
        /* Featured Products */
        .section-title {
            text-align: center;
            margin: 60px 0 40px;
            font-size: 32px;
            color: #d8bfd8;
            position: relative;
        }
        
        .section-title::after {
            content: '';
            position: absolute;
            width: 100px;
            height: 4px;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 2px;
        }
        
        .products {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
            padding: 20px 40px;
            max-width: 1400px;
            margin: 0 auto;
        }
        
        .product-card {
            background: rgba(19, 15, 38, 0.8);
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            border: 1px solid rgba(101, 45, 147, 0.3);
        }
        
        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
            border-color: #6a11cb;
        }
        
        .product-image {
            height: 220px;
            background-color: #1a1538;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
        
        .product-image i {
            font-size: 80px;
            color: #6a11cb;
        }
        
        .product-info {
            padding: 20px;
        }
        
        .product-title {
            font-size: 18px;
            margin-bottom: 10px;
            color: #d8bfd8;
        }
        
        .product-price {
            font-size: 22px;
            font-weight: 700;
            color: #9d50bb;
            margin-bottom: 15px;
        }
        
        .product-description {
            color: #b19cd9;
            margin-bottom: 20px;
            font-size: 14px;
        }
        
        .add-to-cart {
            width: 100%;
            padding: 12px;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: #fff;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .add-to-cart:hover {
            background: linear-gradient(to right, #2575fc, #6a11cb);
        }
        
        /* Categories Section */
        .categories {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px 40px;
            max-width: 1400px;
            margin: 0 auto;
        }
        
        .category {
            background: linear-gradient(rgba(19, 15, 38, 0.8), rgba(19, 15, 38, 0.8)), url('https://images.unsplash.com/photo-1607082350899-7e105aa886ae?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80') no-repeat center center/cover;
            height: 200px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            transition: transform 0.3s;
            border: 1px solid rgba(101, 45, 147, 0.3);
            overflow: hidden;
            position: relative;
        }
        
        .category::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(106, 17, 203, 0.4), rgba(37, 117, 252, 0.4));
            opacity: 0;
            transition: opacity 0.3s;
        }
        
        .category:hover {
            transform: translateY(-5px);
            border-color: #6a11cb;
            box-shadow: 0 10px 25px rgba(106, 17, 203, 0.4);
        }
        
        .category:hover::before {
            opacity: 1;
        }
        
        .category h3 {
            font-size: 24px;
            color: #fff;
            z-index: 1;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
        }
        
        /* Footer */
        footer {
            background: rgba(19, 15, 38, 0.95);
            padding: 40px;
            margin-top: 80px;
            border-top: 1px solid rgba(101, 45, 147, 0.3);
        }
        
        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
            max-width: 1400px;
            margin: 0 auto;
        }
        
        .footer-column h3 {
            color: #d8bfd8;
            margin-bottom: 20px;
            font-size: 20px;
            position: relative;
            padding-bottom: 10px;
        }
        
        .footer-column h3::after {
            content: '';
            position: absolute;
            width: 40px;
            height: 3px;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            bottom: 0;
            left: 0;
            border-radius: 2px;
        }
        
        .footer-column p, .footer-column a {
            color: #b19cd9;
            margin-bottom: 15px;
            display: block;
            text-decoration: none;
            transition: color 0.3s;
        }
        
        .footer-column a:hover {
            color: #9d50bb;
        }
        
        .social-icons {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }
        
        .social-icons a {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(35, 25, 66, 0.7);
            border: 2px solid #4b0082;
            color: #d8bfd8;
            font-size: 18px;
            transition: all 0.3s;
        }
        
        .social-icons a:hover {
            border-color: #9d50bb;
            color: #9d50bb;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.4);
        }
        
        .copyright {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid rgba(101, 45, 147, 0.3);
            color: #9370db;
        }
        
        /* Scroll to Top Button */
        .scroll-to-top {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.4);
            z-index: 99;
            border: none;
        }
        
        .scroll-to-top:hover {
            background: linear-gradient(to right, #2575fc, #6a11cb);
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(106, 17, 203, 0.6);
        }
        
        /* Responsive Styles */
        @media (max-width: 900px) {
            nav ul {
                gap: 15px;
            }
            
            .hero h1 {
                font-size: 36px;
            }
            
            .hero p {
                font-size: 18px;
            }
        }
        
        @media (max-width: 768px) {
            header {
                padding: 15px 20px;
                flex-direction: column;
                gap: 15px;
            }
            
            nav ul {
                gap: 10px;
                flex-wrap: wrap;
                justify-content: center;
            }
            
            .hero {
                height: 500px;
            }
            
            .products, .categories {
                padding: 20px;
            }
        }
        
        @media (max-width: 480px) {
            .hero h1 {
                font-size: 28px;
            }
            
            .hero p {
                font-size: 16px;
            }
            
            .btn {
                padding: 12px 30px;
                font-size: 16px;
            }
            
            .section-title {
                font-size: 26px;
            }
            
            .product-title {
                font-size: 16px;
            }
            
            .product-price {
                font-size: 20px;
            }
        }
    </style>
</head>
<body>
    <!-- Header with Logo and User Icon -->
    <header>
        <div class="logo">
            <div class="logo-icon">
                <i class="fas fa-crown"></i>
            </div>
            <div class="logo-text">RoyalPurple</div>
        </div>
        
        <nav>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Products</a></li>
                <li><a href="#">Categories</a></li>
                <li><a href="#">Deals</a></li>
                <li><a href="#">About</a></li>
            </ul>
        </nav>
        
        <div class="header-icons">
            <div class="icon-btn">
                <i class="fas fa-search"></i>
            </div>
            <div class="icon-btn">
                <i class="fas fa-heart"></i>
            </div>
            <div class="icon-btn">
                <i class="fas fa-shopping-cart"></i>
                <span class="cart-count">3</span>
            </div>
            <div class="icon-btn">
                <i class="fas fa-user"></i>
            </div>
        </div>
    </header>
    
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Elevate Your Style with Premium Products</h1>
            <p>Discover the perfect blend of quality and elegance with our exclusive collection</p>
            <a href="#" class="btn">Shop Now</a>
        </div>
    </section>
    
    <!-- Featured Products -->
    <h2 class="section-title">Featured Products</h2>
    <div class="products">
        <div class="product-card">
            <div class="product-image">
                <i class="fas fa-headphones"></i>
            </div>
            <div class="product-info">
                <h3 class="product-title">Premium Wireless Headphones</h3>
                <div class="product-price">$199.99</div>
                <p class="product-description">Experience crystal clear sound with our noise-cancelling headphones.</p>
                <button class="add-to-cart">Add to Cart</button>
            </div>
        </div>
        
        <div class="product-card">
            <div class="product-image">
                <i class="fas fa-smartwatch"></i>
            </div>
            <div class="product-info">
                <h3 class="product-title">Smart Fitness Watch</h3>
                <div class="product-price">$179.99</div>
                <p class="product-description">Track your health and stay connected with our advanced smartwatch.</p>
                <button class="add-to-cart">Add to Cart</button>
            </div>
        </div>
        
        <div class="product-card">
            <div class="product-image">
                <i class="fas fa-camera"></i>
            </div>
            <div class="product-info">
                <h3 class="product-title">4K Action Camera</h3>
                <div class="product-price">$249.99</div>
                <p class="product-description">Capture your adventures in stunning 4K resolution with this compact camera.</p>
                <button class="add-to-cart">Add to Cart</button>
            </div>
        </div>
        
        <div class="product-card">
            <div class="product-image">
                <i class="fas fa-tshirt"></i>
            </div>
            <div class="product-info">
                <h3 class="product-title">Premium Cotton T-Shirt</h3>
                <div class="product-price">$39.99</div>
                <p class="product-description">Ultra-soft premium cotton t-shirt for everyday comfort and style.</p>
                <button class="add-to-cart">Add to Cart</button>
            </div>
        </div>
    </div>
    
    <!-- Categories Section -->
    <h2 class="section-title">Shop by Category</h2>
    <div class="categories">
        <div class="category">
            <h3>Electronics</h3>
        </div>
        <div class="category">
            <h3>Fashion</h3>
        </div>
        <div class="category">
            <h3>Home & Living</h3>
        </div>
        <div class="category">
            <h3>Health & Beauty</h3>
        </div>
    </div>
    
    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-column">
                <h3>About Us</h3>
                <p>RoyalPurple offers premium products with a focus on quality, style, and customer satisfaction.</p>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-pinterest"></i></a>
                </div>
            </div>
            
            <div class="footer-column">
                <h3>Quick Links</h3>
                <a href="#">Home</a>
                <a href="#">Products</a>
                <a href="#">Featured</a>
                <a href="#">New Arrivals</a>
                <a href="#">Discounts</a>
            </div>
            
            <div class="footer-column">
                <h3>Customer Service</h3>
                <a href="#">Contact Us</a>
                <a href="#">FAQs</a>
                <a href="#">Returns & Exchanges</a>
                <a href="#">Shipping Information</a>
                <a href="#">Track Your Order</a>
            </div>
            
            <div class="footer-column">
                <h3>Newsletter</h3>
                <p>Subscribe to our newsletter for special offers and updates.</p>
                <form>
                    <input type="email" placeholder="Your email address" style="width: 100%; padding: 12px; margin-bottom: 10px; border-radius: 6px; border: 1px solid #4b0082; background: rgba(35, 25, 66, 0.7); color: white;">
                    <button type="submit" class="btn" style="width: 100%; padding: 12px;">Subscribe</button>
                </form>
            </div>
        </div>
        
        <div class="copyright">
            <p>&copy; 2023 RoyalPurple. All rights reserved.</p>
        </div>
    </footer>
    
    <!-- Scroll to Top Button -->
    <button class="scroll-to-top">
        <i class="fas fa-arrow-up"></i>
    </button>
    
    <script>
        // Scroll to Top Functionality
        const scrollToTopBtn = document.querySelector('.scroll-to-top');
        
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                scrollToTopBtn.style.display = 'flex';
            } else {
                scrollToTopBtn.style.display = 'none';
            }
        });
        
        scrollToTopBtn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        
        // Add to Cart Animation
        const addToCartButtons = document.querySelectorAll('.add-to-cart');
        const cartCount = document.querySelector('.cart-count');
        let count = 3;
        
        addToCartButtons.forEach(button => {
            button.addEventListener('click', () => {
                count++;
                cartCount.textContent = count;
                
                // Animation
                button.textContent = 'Added to Cart!';
                button.style.background = 'linear-gradient(to right, #25fc5e, #2bc48a)';
                
                setTimeout(() => {
                    button.textContent = 'Add to Cart';
                    button.style.background = 'linear-gradient(to right, #6a11cb, #2575fc)';
                }, 1500);
            });
        });
    </script>
</body>
</html>