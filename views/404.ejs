<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'off-white': '#fafafa',
                        'off-black': '#1a1a1a',
                        'soft-gray': '#f5f5f5',
                        'dark-gray': '#2a2a2a'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-off-white min-h-screen flex items-center justify-center">
    <div class="max-w-2xl mx-auto p-6 text-center">
        <!-- 404 Illustration -->
        <div class="mb-8">
            <div class="inline-block p-8 bg-white rounded-full shadow-lg">
                <svg class="w-24 h-24 text-dark-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-3-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
        </div>

        <!-- Error Message -->
        <div class="mb-8">
            <h1 class="text-8xl font-bold text-off-black mb-4">404</h1>
            <h2 class="text-3xl font-semibold text-dark-gray mb-4">Page Not Found</h2>
            <p class="text-lg text-gray-600 max-w-md mx-auto leading-relaxed">
                Sorry, we couldn't find the page you're looking for. It might have been moved, deleted, or you entered the wrong URL.
            </p>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-4">

            <!-- Go Back Button -->
            <div class="flex items-center justify-center gap-4">
                <button 
                    onclick="goBack()"
                    class="inline-flex items-center justify-center space-x-3 px-6 py-3 bg-white text-off-black border-2 border-off-black rounded-xl hover:bg-soft-gray transition-colors font-medium"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    <span>Go Back</span>
                </button>


                 <button 
                    onclick="goHome()"
                    class="inline-flex items-center justify-center space-x-3 px-6 py-3 bg-[#000] text-off-white border-2 border-off-black rounded-xl hover:bg-[#000] transition-colors font-medium"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    <span>Go To Home</span>
                </button>


            </div>
           

        </div>

       
    </div>

    <script>
        function goHome() {
            // In a real app, redirect to homepage
           
            window.location.href = 'http://localhost:5000/';
        }

        function goBack() {
            // Go back to previous page
            if (window.history.length > 1) {
                window.history.back();
            } else {
                alert('No previous page to go back to');
            }
        }

        function handleSearch() {
            const searchTerm = document.getElementById('searchInput').value.trim();
            if (searchTerm) {
                alert(`Searching for: "${searchTerm}"`);
                // In a real app, perform search
                // window.location.href = `/search?q=${encodeURIComponent(searchTerm)}`;
            } else {
                alert('Please enter a search term');
            }
        }

        function contactSupport() {
            alert('Opening support contact...');
            // In a real app, open support page or modal
        }

        function goToHelp() {
            alert('Redirecting to help center...');
            // In a real app, redirect to help center
        }

        // Allow search on Enter key
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('searchInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    handleSearch();
                }
            });
        });

        // Add some subtle animations
        document.addEventListener('DOMContentLoaded', function() {
            const elements = document.querySelectorAll('h1, h2, p, button, input');
            elements.forEach((el, index) => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                
                setTimeout(() => {
                    el.style.opacity = '1';
                    el.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
</body>
</html>